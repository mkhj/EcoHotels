        <div class="container">
        
        <div class="search-area">
            <h1 class="hidden-phone">Find a place to stay</h1>
            <h2 class="hidden-phone">“Take only memories, leave only footprints.” – Chief Seattle</h2>
            <form id="search-form" action="@Url.Action("index", "home", new { lang="en" })" method="post">
                <div>
                    @Html.AntiForgeryToken()
                </div>

                <div class="span4 search-form shadow">
                    <select name="cityid" class="span3 required">
                        <option value="">Please select destination..</option>
                        @foreach (var country in Model.TagCities)
                        { 
                            <optgroup label="@country.Key">
                                @foreach (var city in country.Value)
                                { 
                                    <option value="@city.Value">@city.Text</option>
                                }                            
                            </optgroup>                        
                        }
                    </select>

                    @Html.TextBox("arrival", "", new { @class = " required", placeholder = "Check In" })

                    @Html.TextBox("departure", "", new { @class = "span3 required", placeholder = "Check Out" })

                    <center>
                    <button type="submit" class="btn btn-success">Check Availability</button>
                    </center>                    
                </div> 
            </form>
        </div>        
        
        </div>

    </div>
