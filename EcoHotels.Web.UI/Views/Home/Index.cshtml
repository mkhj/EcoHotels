      <a class="left carousel-control hidden-phone" href="#myCarousel" data-slide="prev">&lsaquo;</a>
      <a class="right carousel-control hidden-phone" href="#myCarousel" data-slide="next">&rsaquo;</a>
    </div><!-- /.carousel -->

