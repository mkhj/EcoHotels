@model EcoHotels.Web.UI.Models.EditCustomerPasswordModel
@{
    ViewBag.Title = "Account password";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="view" class="container" data-view="account" data-action="password">

    <h2>
        Account
        <small>Change your basic account settings</small>
    </h2>

    <div class="row">
        <div class="span9">
            <form class="form-horizontal ajaxform" action="@Url.Action("password", "checkout", null)" method="post">
                <div>
                    @Html.AntiForgeryToken()
                </div>

                <div class="control-group" style="padding: 10px 20px;">
                    <div class="alert hidden">...</div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="input01">New Password:</label>
                    <div class="controls">
                        @Html.TextBoxFor(m => m.NewPassword, new { @class = "span4 required" })
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="input01">Confirm Password:</label>
                    <div class="controls">
                        @Html.TextBoxFor(m => m.ConfirmPassword, new { @class = "span4 required" })
                    </div>
                </div>

                <div class="form-actions">
                    <button type="submit" class="btn" data-loading-text="Saving...!" data-complete-text="Save changes">Save changes</button>
                </div>  

            </form>
        </div>
        <div id="sidebar" class="span3">
            <ul class="nav nav-pills nav-stacked" style="padding: 20px 20px 0 20px;">
                <li><a href="@Url.Action("index", "account", null)">Account</a></li>
                <li class="active"><a href="@Url.Action("password", "account", null)">Password</a></li>
            </ul>
        </div>
    </div>
</div>