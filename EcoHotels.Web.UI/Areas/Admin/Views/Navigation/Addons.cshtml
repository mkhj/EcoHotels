@{
    ViewBag.Title = "Addons";
}

<ul id="sidebar" class="nav nav-list">
    <li class="nav-header">Addons</li>

    @foreach (var item in Model.Items)
    {
        if (item.IsSelected)
        { 
            <li class="active"><a>@item.Name</a></li>
        }
        else
        { 
            <li><a href="@Url.Action("edit", "addon", new { id = item.Id })">@item.Name</a></li>
        }
    }  

    <li class="divider"></li>
    <li class="@(Model.Page == "add-addon" ? "active" : "")"><a href="@Url.Action("create", "addon", null)" >Add addon</a></li>
</ul>