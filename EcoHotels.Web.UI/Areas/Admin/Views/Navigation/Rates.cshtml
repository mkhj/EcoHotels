@{
    ViewBag.Title = "Rates";
}

<ul id="sidebar" class="nav nav-list">
    <li class="nav-header">Categories</li>
    <li class="@(Model.Page == "rackrate" ? "active" : "")"><a href="@Url.Action("index", "rate")">Rack rate</a></li>

    @foreach (var item in Model.Items)
    {
        if (item.IsSelected)
        { 
            <li class="active"><a>@item.Name</a></li>
        }
        else
        { 
            <li><a href="@Url.Action("edit", "rate", new { id = item.Id })">@item.Name</a></li>
        }
    }  

    <li class="divider"></li>
    <li class="@(Model.Page == "add-category" ? "active" : "")"><a href="@Url.Action("create", "rate", null)" >Add Category</a></li>
</ul>
