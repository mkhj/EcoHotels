@model EcoHotels.Web.UI.Areas.Backend.Models.EditOrganizationModel
@{
    ViewBag.Title = "Backend - Edit Organization";
    Layout = "~/Areas/Admin/Views/Shared/_App.cshtml";
}

@{Html.RenderAction("mainnavigation", "navigation", new { page = "backend" });}

<div id="view" class="container" data-view="organization" data-action="edit">
    <h2>
        Organization
        <small>Change organization contact information</small>
    </h2>
    <div class="row">
        <div class="span9">

            <form class="form-horizontal ajaxform" action="@Url.Action("edit", "organization", null)" method="post">
                <div>
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Id" value="@Model.Id" readonly="readonly" />
                </div>


                <div class="content">
                    <div class="control-group">
                        <div class="alert hidden">...</div>
                    </div>
                </div>
   
                <div class="control-group">
                    <label class="control-label" for="input01">Name:</label>
                    <div class="controls">
                        @Html.TextBoxFor(m => m.Name, new { @class = "required" })
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="input01">Vat No.:</label>
                    <div class="controls">
                        @Html.TextBoxFor(m => m.VatNo, new { @class = "required" })
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="input01">Phone:</label>
                    <div class="controls">
                        @Html.TextBoxFor(m => m.Phone, new { @class = "required" })
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="input01">E-mail:</label>
                    <div class="controls">
                        @Html.TextBoxFor(m => m.Email, new { @class = "required" })
                    </div>
                </div>  

                <div class="control-group">
                    <label class="control-label" for="input01">Address1:</label>
                    <div class="controls">
                        @Html.TextBoxFor(m => m.Address1, new { @class = "required" })
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="input01">Address2:</label>
                    <div class="controls">
                        @Html.TextBoxFor(m => m.Address2, new { @class = "" })
                    </div>
                </div> 

                <div class="control-group">
                    <label class="control-label" for="input01">City:</label>
                    <div class="controls">
                        @Html.TextBoxFor(m => m.City, new { @class = "required" })
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="input01">Zipcode:</label>
                    <div class="controls">
                        @Html.TextBoxFor(m => m.Zipcode, new { @class = "required" })
                    </div>
                </div>

                <div class="control-group">
                    <label class="control-label" for="input01">Country:</label>
                    <div class="controls">
                        @Html.DropDownListFor(m => m.SelectedCountryName, Model.AvailableCountries, new { @class = "required" })
                    </div>
                </div>  



                <div class="form-actions">
                    @if (User.IsInRole("backend"))
                    {
                    <a data-toggle="modal" href="#model-delete" class="btn">Delete</a>
                    }
                    <button type="submit" class="btn btn-primary" data-loading-text="Saving...!" data-complete-text="Save changes">Save changes</button>
                </div>

            </form>
        </div>
        <div class="span3">
            @{Html.RenderAction("backend", "navigation", new { page = "list-organizations" });}
        </div>
    </div>
</div>

@Html.Partial("Modal/Delete")