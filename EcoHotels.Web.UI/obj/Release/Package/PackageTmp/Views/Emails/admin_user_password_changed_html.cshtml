@{
    Layout = null;
}

<html>
<head>
    <title>Your Password has changed</title>
</head>
<body>

Hi @Model.User.Firstname @Model.User.Lastname
<br />

<p>
Your password has been changed.
</p>
<br />

<table border="0" cellpadding="0" cellspacing="0">
    <tr>
        <td>Username:</td>
        <td>@Model.User.Email</td>
    </tr>
    <tr>
        <td>Password:</td>
        <td>@Model.Password</td>
    </tr>
</table>

<br />

<p>
Best regards,<br />
@Model.Hotel.Name
</p>

</body>
</html>