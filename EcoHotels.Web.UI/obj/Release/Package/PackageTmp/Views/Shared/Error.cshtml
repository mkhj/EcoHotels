@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>

html {
height: 100%;
-webkit-font-smoothing: antialiased;
margin: 0;
padding: 0;
border: 0;
overflow-y: scroll;
}

body {
height: 100%;
font-family: Arial,'Helvetica Neue',Helvetica,sans-serif;
text-align: center;
margin: 0;
padding: 0;
border: 0;
background: #3C5A76 url('http://tom-goodfellow.tumblr.com/images/status_bg.png?2') no-repeat center;
}

h1 {
color: white;
font-size: 30px;
font-weight: bold;
text-shadow: 0 1px 4px rgba(0, 0, 0, 0.68);
letter-spacing: -1px;
margin: 0;
}

.sorry {
color: #243748;
font-size: 18px;
line-height: 24px;
text-shadow: 0 1px 1px rgba(255, 255, 255, 0.33);
}

</style>

<table height="100%" width="100%">
            <tbody><tr>
                <td align="center" valign="middle">
                    <h1 id="l10n_title">We're sorry</h1>
                    <div class="sorry" style="width:535px;">
                        <p id="l10n_sorry">
                            Our servers are over capacity and certain pages may be temporarily unavailable. We're working quickly to resolve the issue.
                        </p>
                    </div>
                </td>
            </tr>
        </tbody>
</table>

