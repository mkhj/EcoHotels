@model EcoHotels.Web.UI.Areas.Admin.Models.Property.EditHotelInfoModel
@{
    ViewBag.Title = "Create Hotel";
    Layout = "~/Areas/Admin/Views/Shared/_App.cshtml";
}


@{Html.RenderAction("mainnavigation", "navigation", new { page = "hotels" });}

<div id="view" class="container" data-view="roomtype" data-action="create">
    <h2>
        Hotel information
        <small>Change your basic property settings</small>
    </h2>
    <div class="row">
        <div class="span9">

            <form class="form-horizontal ajaxform" action="@Url.Action("edit", "hotel", null)" method="post">
                <div>
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Id" value="@Model.Id" readonly="readonly" />
                </div>

                <fieldset>

                    <div class="control-group">
                        <div class="alert hidden">...</div>
                    </div>

                    <div class="control-group">
                        <label class="control-label" for="input01">Name:</label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.Name, new { @class = "span4 required" })
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label" for="input01">Vat No.:</label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.VatNo, new { @class = "required" })
                        </div>
                    </div>
            
                    <div class="control-group">
                        <label class="control-label" for="input01">E-mail:</label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.Email, new { @class = "required email" })
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label" for="input01">Phone:</label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.Phone, new { @class = "required" })
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label" for="input01">Fax:</label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.Fax)
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label" for="input01">WWW:</label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.WWW)
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label" for="input01">Address:</label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.Address1)
                        </div>
                    </div>

                    <div class="control-group">
                        <div class="controls">
                            @Html.TextBoxFor(m => m.Address2)
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label" for="input01">Address:</label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.City, new { @class = "required" })
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label" for="input01">Zipcode:</label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.Zipcode, new { @class = "required" })
                        </div>
                    </div>

                    <div class="control-group">
                        <label class="control-label" for="input01">Country:</label>
                        <div class="controls">
                            @Html.DropDownListFor(m => m.SelectedCountryName, Model.AvailableCountries, new { @class = "required" })
                        </div>
                    </div>

                </fieldset>

                <div class="form-actions">
                    <button type="submit" class="btn btn-primary" data-loading-text="Saving...!" data-complete-text="Save change">Save changes</button>
                </div>

            </form>
        </div>

        <div class="span3">
            @{Html.RenderAction("hotels", "navigation", new { page = "information", hotelId = Model.Id });}
        </div>

    </div>
</div>

