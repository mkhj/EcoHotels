@{
    ViewBag.Title = "Rates";
    Layout = "~/Areas/Admin/Views/Shared/_App.cshtml";
}

@{Html.RenderAction("mainnavigation", "navigation", new { page = "pricing" });}

<style>
    
    table th
    {
        width: 110px;    
    }
    
    table tbody td
    {
        text-align: center;
    }
    
    #qty-controls input,
    #qty-controls select,
    table tbody td input
    {
        display: inline-block;
        margin-bottom: 0;
        vertical-align: middle;	          
    }    
    
</style>

<script>

    $(function () {

        $('table tbody').on('click', ':checkbox', function (e) {
            var $this = $(this);
            var elements = $this.parent().siblings();
            $(elements[1]).text(elements[0].value);
            elements.toggle();
        });
    
    });

</script>

