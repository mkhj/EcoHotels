@model EcoHotels.Web.UI.Areas.Admin.Models.AssetCategoryModel
@{
    ViewBag.Title = "Media - Add folder";
    Layout = "~/Areas/Admin/Views/Shared/_App.cshtml";
}


@{Html.RenderAction("mainnavigation", "navigation", new { page = "media" });}


<div id="view" class="container" data-view="media" data-action="edit">

    <div class="row">
        <div class="span3">
            @{Html.RenderAction("media", "navigation", new { page = "edit-folder", folderId = Model.Id });}
        </div>
        <div class="span9">
            <form class="form-horizontal ajaxform" action="@Url.Action("editfolder", "media", null)" method="post">
                <div>
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="Id" value="@Model.Id" readonly="readonly" />
                </div>
                    
                <fieldset>
                    <legend style="padding-bottom: 5px;">Edit folder</legend>

                    <div class="control-group">
                        <div class="alert hidden">...</div>
                    </div>

                    <div class="control-group">
                        <label class="control-label" for="input01">Name:</label>
                        <div class="controls">
                            @Html.TextBoxFor(m => m.Name, new { @class = "required" })
                        </div>
                    </div>

                </fieldset>

                <div class="form-actions">
                    <a data-toggle="modal" href="#model-delete" class="btn">Delete</a>
                    <button type="submit" class="btn btn-primary" data-loading-text="Saving...!" data-complete-text="Save change">Save changes</button>
                </div>

            </form>
        </div>
    </div>

</div>

@Html.Partial("Modal/Delete")