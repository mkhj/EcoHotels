<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="utf-8">
    <title>@ViewBag.Title - Administration</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">

    @{
        Html.RequiresCss("/assets/bootstrap/css/bootstrap.css", 0);
        Html.RequiresCss("/assets/bootstrap/css/bootstrap-responsive.css", 1);
        Html.RequiresCss("/assets/css/app.css", 100);
    }
    @MvcHtmlString.Create(Html.RenderCssHere())

    @* Le HTML5 shim, for IE6-8 support of HTML5 elements *@
    <!--[if lt IE 9]>
      <script src="http://html5shim.googlecode.com/svn/trunk/html5.js"></script>
    <![endif]-->

    @RenderSection("stylesheet", required: false)

    <script src="http://ajax.googleapis.com/ajax/libs/jquery/1.7.2/jquery.min.js" type="text/javascript"></script>
    <script src="http://ajax.googleapis.com/ajax/libs/jqueryui/1.8.18/jquery-ui.min.js" type="text/javascript"></script>
    <script src="http://ajax.aspnetcdn.com/ajax/jquery.validate/1.9/jquery.validate.min.js" type="text/javascript"></script>

    @{
        Html.RequiresJs("/assets/js/jquery.form.min.js", 10);
        Html.RequiresJs("/assets/bootstrap/js/bootstrap.min.js", 20);

        // The Templates plugin is included to render the upload/download listings
        Html.RequiresJs("/assets/js/fileupload/tmpl.min.js", 30);
        // The Load Image plugin is included for the preview images and image resizing functionality
        Html.RequiresJs("/assets/js/fileupload/load-image.min.js", 31);
        // The Canvas to Blob plugin is included for image resizing functionality
        Html.RequiresJs("/assets/js/fileupload/canvas-to-blob.min.js", 32);

        Html.RequiresJs("/assets/js/fileupload/jquery.fileupload.js", 33);
        Html.RequiresJs("/assets/js/fileupload/jquery.fileupload-fp.js", 34);
        Html.RequiresJs("/assets/js/fileupload/jquery.fileupload-ui.js", 35);

        Html.RequiresJs("/assets/js/app.js", 100);
        Html.RequiresJs("/assets/js/app.views.backend.js", 101);
    }
        
    @RenderSection("javascript", required: false)

    <link rel="shortcut icon" href="/assets/bootstrap/ico/favicon.ico">
    <link rel="apple-touch-icon-precomposed" sizes="114x114" href="/assets/bootstrap/ico/apple-touch-icon-114-precomposed.png">
    <link rel="apple-touch-icon-precomposed" sizes="72x72" href="/assets/bootstrap/ico/apple-touch-icon-72-precomposed.png">
    <link rel="apple-touch-icon-precomposed" href="/assets/bootstrap/ico/apple-touch-icon-57-precomposed.png">
</head>
<body>    

    @RenderBody()

    <div class="container">
        <footer class="footer">
            <p class="pull-right"><a href="#">Back to top</a></p>
            <p>iloveecohotels.com</p>
        </footer>
    </div>

    @MvcHtmlString.Create(Html.RenderJsHere())
</body>
</html>